<!DOCTYPE html>
<link href="https://fonts.googleapis.com/css?family=Spirax" rel="stylesheet">    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


  <body class="gen-nav">
    <br>
    <div class="home-nav">
      <%= link_to authenticated_root_path do %> <h2 style="underline: none">Planted!</h2> <%end%>
      <div class="wrap">
        <% 8.times do |count| %>
        <div class = "blocks"><%= @temperature.day(count)  %>:
          <br>
          <%= @temperature.daily_temp(count) %>
        </div>
        <% end %>
      </div >



      <% if user_signed_in? %>
        <li> <a  <%= link_to "Garden  ", authenticated_root_path %> </a></li>
        <li> <a  <%= link_to " Profile  ", edit_user_registration_path %> </a></li>
        <figure class="snip1566" position="left"><img src="https://d13yacurqjgara.cloudfront.net/users/537923/screenshots/1717101/plant-dribble.gif" alt="sq-sample19" />
          <figcaption><%= link_to "Add Plant", new_plant_path%></figcaption>

        </figure>
        <li> <a class="Sign Out" <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </a></li>


        <%- else -%>
        <li>  <a class="Sign In" <%= link_to "Sign In  ", new_user_session_path %> </a></li>
        <li>  <a class="Sign Up" <%= link_to "Sign Up", new_user_registration_path %> </a></li>
        <%end%>
      </ul>
    </div>
    <br>
    <br>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
